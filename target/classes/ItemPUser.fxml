<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ItemPUserController">
    <children>
        <VBox spacing="10.0" alignment="CENTER" style="-fx-background-color: white; -fx-border-color: #008152; -fx-border-radius: 10; -fx-background-radius: 10;" prefWidth="330" prefHeight="280">
            <padding>
                <Insets top="10.0" bottom="10.0" left="20.0" right="20.0"/>
            </padding>
            <!-- Image -->
            <ImageView fx:id="image_prod" fitHeight="140.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                <viewport>
                    <Rectangle2D />
                </viewport>
            </ImageView>

            <!-- Product Details -->
            <Label fx:id="nom_prod" text="Product Name: ..." textFill="#008152" wrapText="true">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <Label fx:id="prix_prod" text="Price: ..." textFill="#008152" wrapText="true">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>
            <Label fx:id="description_prod" text="Description: ..." textFill="#008152" wrapText="true">
                <font>
                    <Font name="Cambria" size="16.0" />
                </font>
            </Label>



            <!-- Button -->
            <JFXButton fx:id="add" buttonType="RAISED" onAction="#AddToBasket" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #008152; -fx-background-radius: 10;" text="Add to basket" textFill="WHITE">
                <font>
                    <Font size="15.0" />
                </font>
            </JFXButton>
            <JFXButton fx:id="reviews" onAction="#openReviewsWindow" prefHeight="35.0" prefWidth="150.0"
                       style="-fx-background-color: #004e2a; -fx-background-radius: 10;" text="Reviews" textFill="WHITE">
                <font>
                    <Font size="15.0" />
                </font>
            </JFXButton>


        </VBox>
    </children>
</AnchorPane>
