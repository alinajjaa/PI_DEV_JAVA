<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AfficherCategorieScene" prefHeight="800.0" prefWidth="1300.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AfficherCategorieController">
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
    <children>
        <ImageView fitHeight="64.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
            <!-- <image><Image url="logo.png" /></image> -->
        </ImageView>

        <Line endX="1066.0" layoutX="167.0" layoutY="163.0" startX="-100.0" stroke="#008152" />

        <HBox layoutX="38.0" layoutY="178.0" prefHeight="607.0" prefWidth="1229.0" style="-fx-background-color: transparent;">
            <children>
                <ScrollPane fx:id="scroll" prefHeight="607.0" prefWidth="1218.0" style="-fx-background-color: transparent; -fx-border-color: #008152; -fx-border-width: 1px;">
                    <content>
                        <GridPane fx:id="CategoriesContainer" prefHeight="293.0" prefWidth="1204.0" style="-fx-background-color: white;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                        </GridPane>
                    </content>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </ScrollPane>
            </children>
        </HBox>

        <JFXButton buttonType="RAISED" layoutX="162.0" layoutY="110.0" onAction="#ajouterCategorieOnClick" prefHeight="22.0" prefWidth="140.0" style="-fx-background-color: #008152;" text="Add Category" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>

        <JFXButton buttonType="RAISED" layoutX="312.0" layoutY="110.0"  prefHeight="22.0" prefWidth="160.0" style="-fx-background-color: #008152;" text="View Category" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>

        <JFXTextField fx:id="searchField" layoutX="508.0" layoutY="114.0" promptText="Search Category" unFocusColor="WHITE">
            <font>
                <Font size="17.0" />
            </font>
        </JFXTextField>

        <JFXButton fx:id="search" buttonType="RAISED" layoutX="717.0" layoutY="111.0" prefHeight="19.0" prefWidth="135.0" style="-fx-background-color: #008152;" text="Search" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </JFXButton>

    </children>
</AnchorPane>
