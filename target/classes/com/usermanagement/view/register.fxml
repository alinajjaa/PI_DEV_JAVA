                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="lastNameField" prefHeight="30.0" prefWidth="300.0" promptText="Enter your last name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Label fx:id="lastNameErrorLabel" prefHeight="30.0" prefWidth="220.0" textFill="RED">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="700.0" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Date of Birth:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="dobField" prefHeight="30.0" prefWidth="300.0" promptText="Select your date of birth" />
                  <Label fx:id="dobErrorLabel" prefHeight="30.0" prefWidth="220.0" textFill="RED">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="700.0" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Password:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="300.0" promptText="Enter your password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <Label fx:id="passwordErrorLabel" prefHeight="30.0" prefWidth="220.0" textFill="RED">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="700.0" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Confirm:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="confirmPasswordField" prefHeight="30.0" prefWidth="300.0" promptText="Confirm your password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <Label fx:id="confirmPasswordErrorLabel" prefHeight="30.0" prefWidth="220.0" textFill="RED">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="errorLabel" alignment="CENTER" prefHeight="20.0" prefWidth="500.0" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Button fx:id="registerButton" defaultButton="true" mnemonicParsing="false" onAction="#handleRegister" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #3f51b5;" text="Register" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #757575;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
