                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <TextField fx:id="imagePathField" prefHeight="30.0" prefWidth="1.0" promptText="Image path" visible="false" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="700.0" spacing="10.0">
               <children>
                  <Label prefWidth="120.0" text="Email:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="emailField" prefHeight="30.0" prefWidth="300.0" promptText="Enter your email">
                     <font>
