<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.calendarfx.view.CalendarView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.agritrace.controllers.LocationCalendar"
      spacing="10"
      styleClass="main-container">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Filter Controls -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="%calendar.filter.user" />
        <TextField fx:id="userIdField" promptText="%calendar.filter.user" prefWidth="100"/>
        
        <Label text="%calendar.filter.service" />
        <ComboBox fx:id="serviceComboBox" prefWidth="200"/>
        
        <Button fx:id="applyFilterButton" text="%button.apply" styleClass="action-button"/>
        <Button fx:id="clearFilterButton" text="%button.clear" styleClass="action-button"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <ComboBox fx:id="languageComboBox" prefWidth="100" />
        <Button fx:id="closeButton" text="%button.close" onAction="#handleClose" styleClass="action-button"/>
    </HBox>

    <HBox spacing="10">
        <Button fx:id="dayViewButton" text="%calendar.view.day" />
        <Button fx:id="weekViewButton" text="%calendar.view.week" />
        <Button fx:id="monthViewButton" text="%calendar.view.month" />
    </HBox>

    <!-- Calendar -->
    <CalendarView fx:id="calendarView" VBox.vgrow="ALWAYS"/>

</VBox>
