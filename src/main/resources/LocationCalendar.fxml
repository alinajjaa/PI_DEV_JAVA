<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.calendarfx.view.CalendarView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.agritrace.controllers.LocationCalendar"
      spacing="10"
      styleClass="main-container">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Filter Controls -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="User ID:" />
        <TextField fx:id="userIdField" promptText="Enter User ID" prefWidth="100"/>
        
        <Label text="Service:" />
        <ComboBox fx:id="serviceComboBox" prefWidth="200"/>
        
        <Button fx:id="applyFilterButton" text="Apply Filter" styleClass="action-button"/>
        <Button fx:id="clearFilterButton" text="Clear Filter" styleClass="action-button"/>
    </HBox>

    <!-- Calendar -->
    <CalendarView fx:id="calendarView" VBox.vgrow="ALWAYS"/>

</VBox>
