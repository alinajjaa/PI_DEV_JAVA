<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.CategorieCardController"
            prefHeight="80.0" prefWidth="1204.0"
            style="-fx-background-color: white;">
    <children>
        <HBox fx:id="itemBox"
              alignment="CENTER_LEFT"
              spacing="15.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              style="-fx-border-color: #008152;">
            <padding>
                <Insets top="10.0" bottom="10.0" left="20.0" right="20.0"/>
            </padding>
            <children>

                <!-- Optional image if you want an icon -->


                <!-- Labels -->
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="nom_categorie" text="Nom" textFill="#008152"
                           style="-fx-font-size: 14px; -fx-font-family: Cambria;" />
                    <Label fx:id="description_categorie" text="Description" textFill="#008152"
                           style="-fx-font-size: 14px; -fx-font-family: Cambria;" />
                    <Label fx:id="type_categorie" text="Type" textFill="#008152"
                           style="-fx-font-size: 14px; -fx-font-family: Cambria;" />
                </VBox>

                <!-- Action buttons -->
                <VBox spacing="5.0" alignment="CENTER_RIGHT">
                    <JFXButton fx:id="Modifier" text="Edit" onAction="#handleModification"
                               buttonType="RAISED" textFill="WHITE"
                               style="-fx-background-color: #008152; -fx-font-size: 12px;" />
                    <JFXButton fx:id="Delete" text="Delete" onAction="#handleDeletion"
                               buttonType="RAISED" textFill="WHITE"
                               style="-fx-background-color: #d32f2f; -fx-font-size: 12px;" />
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>
