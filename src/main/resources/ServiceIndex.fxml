<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.agritrace.controllers.ServiceIndex"
          prefHeight="800.0" prefWidth="1200.0"
          stylesheets="@style.css">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <left>
        <!-- Side Navigation Bar -->
        <VBox id="sideNavBar" fx:id="sideNavBar" prefWidth="200.0" spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Button fx:id="homeButton" text="%nav.home" styleClass="nav-button" />
            <Button fx:id="servicesButton" text="%nav.services" styleClass="nav-button" />
            <Button fx:id="locationsButton" text="%nav.locations" styleClass="nav-button" />
            <Button fx:id="calendarButton" text="%nav.calendar" styleClass="nav-button" />
            <Region VBox.vgrow="ALWAYS" />
            <ComboBox fx:id="languageComboBox" prefWidth="150" />
            <Button fx:id="logoutButton" text="%nav.logout" styleClass="nav-button" />
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="200.0"/>
                <ComboBox fx:id="filterStatus" promptText="%service.status"/>
                <Button fx:id="clearButton" text="%button.clear"/>
            </HBox>

            <TableView fx:id="serviceTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="%service.id" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="%service.name" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="%service.type" prefWidth="100"/>
                    <TableColumn fx:id="descColumn" text="%service.description" prefWidth="200"/>
                    <TableColumn fx:id="priceColumn" text="%service.price" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="%service.status" prefWidth="100"/>
                    <TableColumn fx:id="addressColumn" text="%service.address" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="%service.date" prefWidth="150"/>
                    <TableColumn fx:id="actionColumn" text="%button.actions" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="10.0" alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button fx:id="addButton" text="%service.add" styleClass="action-button" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
