<AnchorPane fx:id="ModifierProduitScene" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierProduitController">
    <children>
        <AnchorPane layoutX="500.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #262626;">
            <children>
                <JFXTextField fx:id="nom_prod" focusColor="WHITE" labelFloat="true" layoutX="53.0" layoutY="150.0" prefHeight="35.0" prefWidth="395.0" promptText="Nom du produit" unFocusColor="#008152">
                    <opaqueInsets>
                        <Insets top="100.0" />
                    </opaqueInsets>
                </JFXTextField>
                <JFXTextField fx:id="prix_prod" focusColor="WHITE" labelFloat="true" layoutX="53.0" layoutY="205.0" prefHeight="25.0" prefWidth="395.0" promptText="Prix du produit" unFocusColor="#008152">
                    <opaqueInsets>
                        <Insets top="100.0" />
                    </opaqueInsets>
                </JFXTextField>
                <JFXTextField fx:id="description_prod" focusColor="WHITE" labelFloat="true" layoutX="53.0" layoutY="259.0" prefHeight="35.0" prefWidth="395.0" promptText="Description du produit" unFocusColor="#008152">
                    <opaqueInsets>
                        <Insets top="100.0" />
                    </opaqueInsets>
                </JFXTextField>
                <JFXTextField fx:id="quantite_prod" focusColor="WHITE" labelFloat="true" layoutX="53.0" layoutY="324.0" prefHeight="35.0" prefWidth="395.0" promptText="Quantité du produit" unFocusColor="#008152">
