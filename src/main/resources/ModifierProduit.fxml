                    <font>
                        <Font size="17.0" />
                    </font>
                </JFXButton>
                <JFXButton buttonType="RAISED" layoutX="53.0" layoutY="445.0" onAction="#importImage" style="-fx-background-color: #008152;" text="Télécharger la photo du produit" textFill="WHITE" />
            <JFXComboBox fx:id="categorieComboBox" focusColor="WHITE" layoutX="53.0" layoutY="400.0" prefHeight="25.0" prefWidth="395.0" promptText="Catégorie" unFocusColor="#008152" />

            </children></AnchorPane>
        <AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #008152;">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="172.0" layoutY="225.0" pickOnBounds="true" preserveRatio="true">
