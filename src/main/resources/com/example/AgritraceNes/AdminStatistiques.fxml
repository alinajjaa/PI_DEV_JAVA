<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.AgritraceNes.Controllers.AdminStatistiquesController">

    <VBox spacing="25" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
          style="-fx-background-color: #f0f4f8;">

        <!-- Bouton de retour -->
        <HBox alignment="TOP_LEFT">
            <Button onAction="#GoToEventPagee" styleClass="UpperSectionBtn" stylesheets="@css/product.css">
                <graphic>
                    <ImageView fitHeight="34" fitWidth="32" preserveRatio="true">
                        <image>
                            <Image url="@icons/back.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Titre -->
        <Label text="Statistiques des Événements"
               style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>

        <!-- Graphiques -->
        <HBox spacing="40" alignment="CENTER">
            <BarChart fx:id="barChartParticipants" title="Participants par Événement"
                      prefHeight="450" prefWidth="500"
                      styleClass="custom-chart">
                <xAxis>
                    <CategoryAxis label="Événements" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre de Participants" />
                </yAxis>
            </BarChart>

            <BarChart fx:id="barChartEvenementsParLieu" title="Événements par Lieu"
                      prefHeight="450" prefWidth="500"
                      styleClass="custom-chart">
                <xAxis>
                    <CategoryAxis label="Lieu" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Nombre d'Événements" />
                </yAxis>
            </BarChart>
        </HBox>

        <!-- Totaux -->
        <HBox spacing="40" alignment="CENTER">
            <VBox alignment="CENTER" spacing="10" styleClass="stat-card">
                <Label text="Total des Événements" styleClass="stat-title"/>
                <Label fx:id="totalEvenementsLabel" text="0" styleClass="stat-value"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10" styleClass="stat-card">
                <Label text="Total des Participants" styleClass="stat-title"/>
                <Label fx:id="totalParticipantsLabel" text="0" styleClass="stat-value"/>
            </VBox>
        </HBox>

        <!-- Graphe + Stats -->
        <HBox spacing="40" alignment="CENTER">
            <PieChart fx:id="pieChartTopEvenements" title="Top 5 Événements"
                      prefWidth="350" prefHeight="400"
                      styleClass="custom-chart"/>

            <VBox spacing="12" styleClass="stat-card">
                <Label text="Statistiques descriptives:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label text="Moyenne:"/>
                <Label fx:id="lblMoyenne" style="-fx-text-fill: #2e7d32;"/>
                <Label text="Médiane:"/>
                <Label fx:id="lblMediane" style="-fx-text-fill: #2e7d32;"/>
                <Label text="Écart-type:"/>
                <Label fx:id="lblEcartType" style="-fx-text-fill: #2e7d32;"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
