<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_LEFT"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.agritrace.Controllers.CommentController"
      style="-fx-background-color: #ffffff; -fx-padding: 20;">

    <!-- Titre principal -->
    <Label fx:id="headerLabel" text="Commentaires"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Liste des commentaires -->
    <ScrollPane fitToWidth="true" prefHeight="300">
        <VBox fx:id="commentListVBox" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9;"/>
    </ScrollPane>

    <!-- Formulaire d'ajout de commentaire -->
    <VBox fx:id="addForm" spacing="12" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Ajouter un commentaire"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextArea fx:id="commentArea" promptText="Votre commentaire..."
                  prefHeight="100" prefWidth="400"
                  wrapText="true" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rechercher un GIF:"/>
            <TextField fx:id="gifSearchField" promptText="Saisir un mot-clé" prefWidth="250"/>
            <Button text="🔍" onAction="#searchGif"/>
        </HBox>

        <ScrollPane prefHeight="100" fitToWidth="true">
            <HBox fx:id="gifResultsBox" spacing="10" style="-fx-padding: 5;"/>
        </ScrollPane>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="GIF sélectionné :"/>
            <TextField fx:id="gifUrlField" promptText="URL du GIF sélectionné" prefWidth="350" editable="false"/>
        </HBox>


        <CheckBox fx:id="anonymousCheckBox" text="Commenter en tant qu'anonyme"/>

        <Label fx:id="messageLabel" text="" visible="false"
               style="-fx-text-fill: red;"/>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="publishButton" text="Publier" onAction="#submitComment"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 20;"/>
            <Button text="Annuler" onAction="#closePopup"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>
</VBox>
