<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.agritrace.controllers.Home"
          prefHeight="800.0" prefWidth="1200.0"
          stylesheets="@style.css">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <left>
        <!-- Side Navigation Bar -->
        <VBox id="sideNavBar" fx:id="sideNavBar" prefWidth="200.0" spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Button fx:id="homeButton" text="%nav.home" styleClass="nav-button" />
            <Button fx:id="servicesButton" text="%nav.services" styleClass="nav-button" />
            <Button fx:id="locationsButton" text="%nav.locations" styleClass="nav-button" />
            <Button fx:id="calendarButton" text="%nav.calendar" styleClass="nav-button" />
            <Region VBox.vgrow="ALWAYS" />
            <ComboBox fx:id="languageComboBox" prefWidth="150" />
            <Button fx:id="logoutButton" text="%nav.logout" styleClass="nav-button" />
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0">
            <!-- Search Controls -->
            <VBox spacing="10.0" styleClass="search-box">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <!-- Text search -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="searchField" prefWidth="200.0" promptText="%search.prompt" />
                    <Button fx:id="clearButton" text="%button.clear" />
                </HBox>
                <!-- Location filter -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <WebView fx:id="locationPicker" prefHeight="40.0" prefWidth="300.0" minHeight="100.0" maxHeight="100.0" minWidth="300.0" maxWidth="300.0" />
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label text="%location.range" />
                        <HBox alignment="CENTER" spacing="5.0">
                            <Slider fx:id="rangeSelector" min="1" max="100" value="10" showTickLabels="true" showTickMarks="true" majorTickUnit="20" minorTickCount="4" prefWidth="150" />
                            <Label fx:id="rangeLabel" text="10 km" />
                        </HBox>
                        <Button fx:id="applyFilterButton" text="%button.apply" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Services Grid -->
            <ScrollPane fitToWidth="true" styleClass="edge-to-edge" VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="servicesContainer" hgap="20" prefWrapLength="900" vgap="20">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
